{% set activePage = url %}

<a href="#main" class="skip-link">{{ languages[lang].skipText }}</a>

<header>
  <nav aria-label="{{ languages[lang].ariaPrimary }}">
    <ul>
      {% for item in navigation[lang] %}
      <li>
        <a
          href="{{ item.url }}"
          {{
          helpers.getLinkActiveState(item.url,
          page.url)
          |
          safe
          }}
          >{{ item.text }}</a
        >
      </li>
      {% endfor %}

    </ul>
  </nav>
  url is: {{page.url}}
</header>
